<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/textColorBlack"
        android:layout_marginTop="10dp"
        android:text="海贼王：一生不悔"
        />
    <TextView
        android:id="@+id/item_banner_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/textColorGray"
        android:layout_marginTop="20dp"
        android:text="海贼王：一生不悔"
        />
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/item_banner_img1"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent" />
       <ImageView
           android:id="@+id/item_banner_img2"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent" />

       <ImageView
           android:id="@+id/item_banner_img3"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent"/>

       <ImageView
           android:id="@+id/item_banner_img4"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent" />
   </LinearLayout>
</LinearLayout>